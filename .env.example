# Core application settings
# IMPORTANT: Generate a secure random token (minimum 32 characters) for APP_SECRET_TOKEN
# You can generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Or use: openssl rand -base64 32
# DO NOT use the example value below in production!
APP_SECRET_TOKEN=example-change-this-to-a-secure-random-token-minimum-32-chars
APP_BASE_URL=http://localhost:5173
TARGET_EMAIL=demo@example.com
REPORT_LANGUAGE=en
STORE_TRANSCRIPTS=true

# Email provider configuration (SMTP example)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=demo@example.com
SMTP_PASSWORD=change-me
EMAIL_DEFAULT_SENDER=coach@example.com

# Optional: SendGrid configuration
SENDGRID_API_KEY=
